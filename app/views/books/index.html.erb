<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :title_or_author_cont %>
    <%= f.text_field :title_or_author_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<div class="row group-previous-books">
	<% @books.each do |book| %>
	<div class="medium-4 columns">
		<div class="item-wrapper">
			<li class="book-image"><img src="<%= book.cover_image %>"></li>
			<li><%= book.title %></li>
			<li><%= book.author %></li>
		</div>
	</div>
	<% end %>
</div>