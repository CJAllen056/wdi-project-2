<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :title_or_author_cont %>
    <%= f.text_field :title_or_author_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<ul>
	<li>
		<% @books.each do |book| %>
		<ul>
			<li><img src="<%= book.cover_image %>"></li>
			<li><a href="/books/<%= book.id %>"><%= book.title %></a></li>
			<li><%= book.author %></li>
			<li><%= book.description %></li>
		</ul>
		<% end %>
	</li>
</ul>