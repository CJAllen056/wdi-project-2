<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :name_cont %>
    <%= f.text_field :name_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<ul>
	<li>
		<% @groups.each do |group| %>
		<% if group.group_type != "hidden" %>
		<ul>
			<li><img src="<%= group.group_image %>"></li>
			<li><a href="/groups/<%= group.id %>"><%= group.name %></a></li>
			<% if group.offline %>
			<li>Offline</li>
			<% else %>
			<li>Online</li>
			<% end %>
			<li><%= group.group_type %></li>
		</ul>
		<% end %>
		<% end %>
	</li>
</ul>